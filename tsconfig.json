{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": [
      "esnext.array",
      "esnext",
      "ES2018",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "useDefineForClassFields": false
  },
  "include": ["./src", "./types"]
}
